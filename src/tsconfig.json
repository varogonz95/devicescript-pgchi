{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "es2022",
        "module": "es2022",
        "lib": ["ES6"],
        "strict": true,
        "strictNullChecks": false,
        "strictFunctionTypes": true,
        "sourceMap": false,
        "declaration": false,
        "experimentalDecorators": true,
        "preserveConstEnums": true,
        "noImplicitThis": true,
        "isolatedModules": true,
        "noImplicitAny": false,
        "moduleDetection": "force",
        "types": []
    },
    "include": [
        "**/*.ts",
        "../node_modules/@devicescript/core/src/*.ts"
, "screen.tsx"    ]
}
